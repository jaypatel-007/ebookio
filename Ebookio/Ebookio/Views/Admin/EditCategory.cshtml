@model Ebookio.Models.tbl_category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Category</h4>
                @if (@TempData["categoryuse"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["categoryuse"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @using (Html.BeginForm("EditCategory", "Admin", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.category_id)
                    <div class="outer">
                        <div class="outer">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.category_name)
                                <input type="text" name="category_name" value=@ViewBag.category_name class="form-control" />
                                @Html.ValidationMessageFor(model => model.category_name, "", new { @class = "text-danger" })
                                @{
                                    if (@ViewBag.errormsg != null)
                                    {
                                        <span class="text-danger"> @ViewBag.errormsg </span>
                                    }
                                }
                            </div>
                            <button type="submit" class="btn btn-primary">SUBMIT</button>
                            <a href="/Admin/Category">
                                <button type="button" class="btn btn-primary">RESET</button>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script src="~/assets/libs/jquery/jquery.min.js"></script>
<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
<script src="~/assets/libs/simplebar/simplebar.min.js"></script>
<script src="~/assets/libs/node-waves/waves.min.js"></script>


