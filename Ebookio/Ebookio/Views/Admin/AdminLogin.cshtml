@model Ebookio.Models.tbl_admin
@{
    Layout = null;
}

<!doctype html>
<html lang="en">


<!-- Mirrored from themesbrand.com/skote-django/layouts/auth-login.html by HTTrack Website Copier/3.x [XR&CO'2014], Thu, 02 Dec 2021 07:01:17 GMT -->
<head>

    <meta charset="utf-8" />
    <title>Admin Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

</head>

<body>
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="bg-primary bg-soft">
                            <div class="row">
                                <div class="col-7">
                                    <div class="text-primary p-4">
                                        <h5 class="text-primary">Welcome Back !</h5>
                                        <p>Sign in to continue to Skote.</p>
                                    </div>
                                </div>
                                <div class="col-5 align-self-end">
                                    <img src="~/assets/images/profile-img.png" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <div class="auth-logo">
                                <a href="index.html" class="auth-logo-light">
                                    <div class="avatar-md profile-user-wid mb-4">
                                        <span class="avatar-title rounded-circle bg-light">
                                            <img src="~/assets/images/logo-light.svg" alt="" class="rounded-circle" height="34">
                                        </span>
                                    </div>
                                </a>

                                <a href="index.html" class="auth-logo-dark">
                                    <div class="avatar-md profile-user-wid mb-4">
                                        <span class="avatar-title rounded-circle bg-light">
                                            <img src="~/assets/images/logo.svg" alt="" class="rounded-circle" height="34">
                                        </span>
                                    </div>
                                </a>
                            </div>
                            <div class="p-2">
                                @using (Html.BeginForm("AdminLogin", "Admin", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="mb-3">
                                        @Html.LabelFor(model => model.admin_emailid, htmlAttributes: new { @class = "form-label" })
                                        @Html.EditorFor(model => model.admin_emailid, new { htmlAttributes = new { @class = "form-control" , @Value = ViewBag.admin_emailid , @placeholder = "Enter Emailid" } })
                                        @Html.ValidationMessageFor(model => model.admin_emailid, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="mb-3">
                                        @Html.LabelFor(model => model.admin_password, htmlAttributes: new { @class = "form-label" })
                                        <div class="input-group auth-pass-inputgroup">
                                            @Html.EditorFor(model => model.admin_password, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.admin_password ,@placeholder = "Enter Password" } })
                                            <button class="btn btn-light " type="button" id="password-addon"><i class="mdi mdi-eye-outline"></i></button>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.admin_password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-check">
                                          @Html.CheckBoxFor(model=>model.RememberMe)
                                          @Html.LabelFor(model=>model.RememberMe)
                                    </div>

                                    <div class="mt-3 d-grid">
                                        <input type="submit" value="Log In" class="btn btn-primary waves-effect waves-light" />
                                    </div>
                                    <br />
                                    if (@ViewBag.msg != null)
                                    {
                                        <div class="alert alert-danger text-danger">
                                            @ViewBag.msg
                                        </div>
                                    }
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end account-pages -->
    <!-- JAVASCRIPT -->
    <script src="~/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/waves.min.js"></script>

    <!-- App js -->
    <script src="~/assets/js/app.js"></script>

    <!-- remove div css -->
    <script>
        function removediv() {
            document.getElementById("alert").style.visibility = "hidden";
        }
        setTimeout("removediv()", 5000);
    </script>
</body>

