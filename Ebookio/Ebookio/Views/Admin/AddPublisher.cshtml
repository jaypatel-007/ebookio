@model Ebookio.Models.tbl_publisher
@{
    ViewBag.Title = "AddPublisher";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Publisher</h4>
                @using (Html.BeginForm("AddPublisher", "Admin", FormMethod.Post))
                {
                    <div class="outer">
                        <div class="outer">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.publisher_name)
                                @Html.TextBoxFor(model => model.publisher_name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.publisher_name, "", new { @class = "text-danger" })
                                @{
                                    if (@ViewBag.errormsg != null)
                                    {
                                        <span class="text-danger"> @ViewBag.errormsg </span>
                                    }
                                }
                            </div>
                            
                                

                            <button type="submit" class="btn btn-primary">SUBMIT</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script src="~/assets/libs/jquery/jquery.min.js"></script>
<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
<script src="~/assets/libs/simplebar/simplebar.min.js"></script>
<script src="~/assets/libs/node-waves/waves.min.js"></script>

